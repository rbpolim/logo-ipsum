generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Order {
  id          String       @id @default(uuid())
  companyName String
  companyUnit String
  dateStart   String
  dateEnd     String?
  requester   String
  purpose     String
  location    String
  status      ORDER_STATUS @default(IN_PROGRESS)
  userId      String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

enum ORDER_STATUS {
  IN_PROGRESS
  WAITING_SURVEY_APPROVAL
  FINISHED
  CANCELED
}
